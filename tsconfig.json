{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2015",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "paths": {
      "~/*": ["./src/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "cypress", "**/*.test.ts", "**/*.test.tsx"]
}