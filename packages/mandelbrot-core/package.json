{
    "name": "@zazzik/mandelbrot-core",
    "private": false,
    "version": "1.0.8",
    "description": "Core library for generating Mandelbrot fractals with Web Worker support for multithreaded rendering.",
    "scripts": {
        "build": "rimraf dist && rollup -c rollup.worker.config.cjs && rollup -c rollup.config.cjs && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "test": "jest",
        "test:watch": "jest --watchAll"
    },
    "main": "./dist/esm/index.js",
    "types": "./dist/esm/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "types": "./dist/esm/index.d.ts"
        },
        "./worker": {
            "import": "./dist/workers/mandelbrot.worker.js"
        }
    },
    "files": [
        "dist/esm",
        "dist/workers"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Zazzik1/Mandelbrot.git"
    },
    "keywords": [
        "canvas",
        "math",
        "mandelbrot",
        "complex-numbers",
        "fractals",
        "webworker",
        "webworkers",
        "web-workers"
    ],
    "author": "Mateusz Bilicki (https://github.com/Zazzik1)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Zazzik1/Mandelbrot/issues"
    },
    "homepage": "https://github.com/Zazzik1/Mandelbrot#readme",
    "devDependencies": {
        "@rollup/plugin-alias": "^5.1.1",
        "@rollup/plugin-typescript": "^12.1.4",
        "@types/jest": "^29.5.3",
        "jest": "^29.6.2",
        "rimraf": "^6.0.1",
        "rollup": "^4.52.3",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.4",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "tslib": "^2.8.1"
    }
}
