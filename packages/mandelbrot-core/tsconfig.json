{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "declaration": true,
        "outDir": "dist/esm",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "importHelpers": true,
        "lib": ["ES2020", "DOM"],
        "rootDir": "src",
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
